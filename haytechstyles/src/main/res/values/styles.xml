<resources>

    <style name="HaytechTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:maxLines">1</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_size_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_size_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_size_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_size_10dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:labelTextSize">@dimen/corner_size_10dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="boxStrokeColor">@color/colorBackground</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="passwordToggleTint">@color/icon_color</item>
        <item name="endIconTint">@color/icon_color</item>
        <item name="passwordToggleDrawable">@drawable/icon_pass_selector</item>

        <item name="pfl_flag_validation">false</item>
        <item name="pfl_box_stroke_color_good_pass">@color/colorOrangeYellow</item>
        <item name="pfl_box_stroke_color_stroke_pass">@color/black</item>
        <item name="pfl_box_stroke_color_weak_pass">@color/colorRed</item>
    </style>


    <style name="PasswordEditTextStyle">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textPassword</item>
        <item name="counterOverflowTextAppearance">@dimen/text_size_16sp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginBottom">@dimen/corner_size_10dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="UsernameEditTextStyle">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="singleLine">true</item>
        <item name="android:maxLength">25</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginBottom">@dimen/corner_size_10dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PhoneEditTextStyle">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:cacheColorHint">#992B2F3E</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="singleLine">true</item>
        <item name="android:maxLength">11</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginBottom">@dimen/corner_size_10dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="AppTheme.TextErrorAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/corner_size_10dp</item>
    </style>

    <style name="AppTheme.PasswordGoodAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorOrangeYellow</item>
        <item name="android:textSize">@dimen/corner_size_10dp</item>
    </style>

    <style name="AppTheme.PasswordStrongAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/corner_size_10dp</item>
    </style>

    <style name="KeyStyle">
        <item name="android:textSize">@dimen/text_size_very_large_25</item>
        <item name="android:textColor">@color/text_key_up_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnRectangleStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/back_btn_rectangle</item>
    </style>

    <style name="btnCircleStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_normal_btn_12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/back_btn_circle</item>
        <item name="android:src">@drawable/arrow_left</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="SearchViewIcon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="textStyleBold">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/dana_bold</item>
    </style>


    <style name="textStylePersianNumber">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/font_iran</item>
    </style>

    <style name="textStyleBoldPersianNumber">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/font_iran</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="circrRadioCustomKeboard">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="mtc_type">Full</item>
        <item name="mtc_outer_width">1.2</item>
        <item name="mtc_checked_inner_color">@color/gray100</item>
        <item name="mtc_checked_outer_color">@color/gray100</item>
        <item name="mtc_duration">400</item>
    </style>


</resources>
